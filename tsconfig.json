{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "allowJs": true,
      "checkJs": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports":true,
    },
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports":true,
        "allowJs": true
      }
    },
  }